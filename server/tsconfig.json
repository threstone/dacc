{
   "compilerOptions": {
      "target": "es2017",
      "noImplicitAny": false,
      "module": "commonjs",
      "removeComments": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "allowJs": true,
      "types": [
         "node"
      ],
      "outDir": "dist/",
      "resolveJsonModule": true
   },
   "include": [
      "*.ts",
      "*.js",
      "./handle",
      "./games"
   ],
   "exclude": [
      "./node_modules/",
      "./dist/"
   ]
}